@model Models.DatabaseContext.Paciente

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Paciente</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-sm-12">
                    <div class="form-group">
                        @Html.LabelFor(Model => Model.Nome, new { @class = "control-label" })
                        @Html.TextBoxFor(Model => Model.Nome, new { @type = "text", @class = "form-control" })
                        @Html.ValidationMessageFor(Model => Model.Nome)
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <div class="form-group">
                        @Html.LabelFor(Model => Model.CPF, new { @class = "control-label" })
                        @Html.TextBoxFor(Model => Model.CPF, new { @type = "text", @class = "form-control" })
                        @Html.ValidationMessageFor(Model => Model.CPF)
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    @Html.LabelFor(Model => Model.PaisId, new { @class = "control-label" })
                </div>
                <div class="col-sm-12">
                    <div class="form-group">
                        @Html.DropDownListFor(Model => Model.PaisId, new SelectList(ViewBag.Paises, "Id", "Descricao").OrderBy(x => x.Text), new { @style = "width: 100%;", @class = "form-control" })
                        @Html.ValidationMessageFor(Model => Model.PaisId)
                        @Html.HiddenFor(Model => Model.PaisId)
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    @Html.LabelFor(Model => Model.EstadoId, new { @class = "control-label" })
                </div>
                <div class="col-sm-12">
                    <div class="form-group">
                        @Html.DropDownListFor(Model => Model.EstadoId, new SelectList(ViewBag.Estados, "Id", "Descricao").OrderBy(x => x.Text), new { @style = "width: 100%;", @class = "form-control" })
                        @Html.ValidationMessageFor(Model => Model.EstadoId)
                        @Html.HiddenFor(Model => Model.EstadoId)
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    @Html.LabelFor(Model => Model.CidadeId, new { @class = "control-label" })
                </div>
                <div class="col-sm-12">
                    <div class="form-group">
                        @Html.DropDownListFor(Model => Model.CidadeId, new SelectList(ViewBag.Cidades, "Id", "Descricao").OrderBy(x => x.Text), new { @style = "width: 100%;", @class = "form-control" })
                        @Html.ValidationMessageFor(Model => Model.CidadeId)
                        @Html.HiddenFor(Model => Model.CidadeId)
                    </div>
                </div>
            </div>
            <input type="hidden" asp-for="DateCreate" />
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
